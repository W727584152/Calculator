<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wbd.calculator.Main3Activity">

    <TextView
        android:id="@+id/Input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:background="#44ff24"
        android:textSize="105px" />

    <TextView
        android:id="@+id/Output"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.28"
        android:background="#441f"
        android:textSize="105px" />

    <GridLayout
        android:layout_width="380dp"
        android:layout_height="290dp"
        android:columnCount="3"
        android:rowCount="6">

        <Button
            android:id="@+id/bt_two"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="二进制转换" />
        <Button
            android:id="@+id/bt_eight"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="八进制转换" />
        <Button
            android:id="@+id/bt_ten"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="十进制转换" />
        <Button
            android:id="@+id/bt_sixteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="十六进制转换" />
        <Button
            android:id="@+id/bt_zf"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="+/-" />
        <Button
            android:id="@+id/bt_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="C" />



        <Button
            android:id="@+id/bt_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="7" />

        <Button
            android:id="@+id/bt_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="8" />

        <Button
            android:id="@+id/bt_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="9" />



        <Button
            android:id="@+id/bt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="4" />

        <Button
            android:id="@+id/bt_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="5" />

        <Button
            android:id="@+id/bt_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="6" />

        <Button
            android:id="@+id/bt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="1" />

        <Button
            android:id="@+id/bt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="2" />

        <Button
            android:id="@+id/bt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="3" />



        <Button
            android:id="@+id/bt_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="fill"
            android:layout_columnSpan="2"/>
        <Button
            android:id="@+id/bt_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/bt_equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:layout_gravity="fill"/>
    </GridLayout>
</LinearLayout>
